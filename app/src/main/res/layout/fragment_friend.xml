<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#f1f1f2">

    <!--<include layout="@layout/layout_swipe_refresh_layout"></include>-->


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dip"
    android:background="#ffffff"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_height="32dip"
        android:background="@drawable/shape_blue_bg">

    <TextView
        android:id="@+id/txt_01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="1度"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:background="@drawable/shape_blue_btn"/>

        <TextView
            android:id="@+id/txt_02"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2度"
            android:textSize="14sp"
            android:textColor="@color/gray_99"/>

        <TextView
            android:id="@+id/txt_03"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="3度"
            android:textSize="14sp"
            android:textColor="@color/gray_99"/>

        <TextView
            android:id="@+id/txt_04"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="4度"
            android:textSize="14sp"
            android:textColor="@color/gray_99"/>

        <TextView
            android:id="@+id/txt_05"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="5度"
            android:textSize="14sp"
            android:textColor="@color/gray_99"/>

        <TextView
            android:id="@+id/txt_06"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="6度"
            android:textSize="14sp"
            android:textColor="@color/gray_99"/>
    </LinearLayout>

</LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.7dip"
        android:background="#d0d0d0" />

    <FrameLayout
        android:id="@+id/frame_friend"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#999999"
        >
    </FrameLayout>




</LinearLayout>