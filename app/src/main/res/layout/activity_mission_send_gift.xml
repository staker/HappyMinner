<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="77dip"
        android:background="@drawable/shape_gradient_full_blue_0"
        android:paddingTop="27dip">

        <LinearLayout
            android:id="@+id/layout_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/selector_shape_nav"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="12dip">

            <ImageView
                android:id="@+id/img_left"
                android:layout_width="8dip"
                android:layout_height="16dip"
                android:layout_marginLeft="12dip"
                android:background="@drawable/icon_top_back"
                android:clickable="true" />

            <TextView
                android:id="@+id/txt_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dip"
                android:text="返回"
                android:textColor="#666666"
                android:textSize="14sp" />

        </LinearLayout>


        <ImageView
            android:id="@+id/img_right"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_shape_nav"
            android:clickable="true"
            android:padding="15dip"
            android:visibility="gone"></ImageView>

        <TextView
            android:id="@+id/txt_right"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_shape_nav"
            android:gravity="center"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:textColor="@color/gray_33"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="80dip"
            android:layout_marginRight="80dip"
            android:gravity="center"
            android:text="每日抢矿任务"
            android:textColor="@color/white"
            android:textSize="17sp" />

    </RelativeLayout>




        <android.support.v4.widget.NestedScrollView
            style="@style/nestedScrollViewStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="75dip"
                    android:background="@drawable/shape_gradient_full_blue_0" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-70dip">


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="200dip"
                        android:layout_marginTop="60dip"
                        android:background="@drawable/shape_full_white_10">
                    </View>




                    <RelativeLayout
                        android:layout_width="673px"
                        android:layout_height="615px"
                        app:layout_auto_basewidth="height"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/mission_gift_bg"
                        android:elevation="4dip">




                        <TextView
                            android:id="@+id/txt_gift_lan"
                        android:layout_width="200px"
                        android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                        android:layout_marginTop="284px"
                            app:layout_auto_basewidth="marginTop"
                        android:gravity="center"
                        android:text="奖励5蓝钻"
                        android:textColor="#5080FD"
                        android:textSize="17sp" />


                        <TextView
                            android:id="@+id/txt_mission_desc"
                            android:layout_width="600px"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:text="送礼金额达到\n10000蓝钻"
                            android:textColor="#000000"
                            android:layout_marginBottom="350px"
                            app:layout_auto_basewidth="marginBottom"
                            android:textSize="30sp" />



                        <TextView
                            android:id="@+id/txt_status"
                            android:layout_width="528px"
                            android:layout_height="96px"
                            app:layout_auto_basewidth="height|marginTop"
                            android:layout_marginTop="428px"
                            android:gravity="center"
                            android:text="去完成"
                            android:textSize="16sp"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/white"
                            android:background="@drawable/selector_color_gradient_blue01_55"/>



                        <TextView
                            android:id="@+id/txt_tips"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="注意：可以给任何矿工送礼"
                            android:textSize="14sp"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/gray_66"
                            android:layout_below="@+id/txt_status"
                            android:layout_marginTop="4dip"/>
                    </RelativeLayout>

                </RelativeLayout>

                <android.support.v7.widget.CardView
                    android:layout_marginTop="40dip"
                    android:layout_marginBottom="4dip"
                    android:layout_width="643px"
                    android:layout_height="230px"
                    android:layout_gravity="center_horizontal"
                    app:layout_auto_basewidth="height"
                    >

                    <TextView
                        android:id="@+id/txt_send_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="您今日已送 200 蓝钻"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:layout_gravity="center"/>
                </android.support.v7.widget.CardView>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>


</LinearLayout>