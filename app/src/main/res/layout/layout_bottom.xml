<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_menus"
    android:layout_width="match_parent"
    android:layout_height="54dip"
    android:layout_alignParentBottom="true"
    android:background="#ffffff">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="53dip"
        android:background="#ffffff"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center">
<!--以前这些标签用的是 com.gc.materialdesign.views.LayoutRipple 容器，有水波纹效果，但是有点卡-->
            <LinearLayout
                android:id="@+id/layout_01"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:clickable="true"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img_01"
                    android:layout_width="21dip"
                    android:layout_height="21dip"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/txt_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_01"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dip"
                    android:text="首页"
                    android:textSize="12sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/txt_tips01"
                android:layout_width="12dip"
                android:layout_height="12dip"
                android:layout_marginTop="4dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="22dip"
                android:text="1"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="12sp"
                android:visibility="gone"
                android:background="@drawable/shape_full_red_55"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center">


            <LinearLayout
                android:id="@+id/layout_02"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:clickable="true"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img_02"
                    android:layout_width="23dip"
                    android:layout_height="23dip"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/txt_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_02"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dip"
                    android:text="矿池"
                    android:textSize="12sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/txt_tips02"
                android:layout_width="12dip"
                android:layout_height="12dip"
                android:layout_marginTop="4dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="22dip"
                android:text="1"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="12sp"
                android:visibility="gone"
                android:background="@drawable/shape_full_red_55"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/layout_03"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"

                android:clickable="true"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img_03"
                    android:layout_width="23dip"
                    android:layout_height="23dip"
                    android:layout_centerHorizontal="true"
                     />

                <TextView
                    android:id="@+id/txt_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_03"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dip"
                    android:text="矿工"
                    android:textSize="12sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/txt_tips03"
                android:layout_width="12dip"
                android:layout_height="12dip"
                android:layout_marginTop="4dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="22dip"
                android:text="1"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="12sp"
                android:visibility="gone"
                android:background="@drawable/shape_full_red_55"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            >

            <LinearLayout
                android:id="@+id/layout_04"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:clickable="true"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img_04"
                    android:layout_width="23dip"
                    android:layout_height="23dip"
                    android:layout_centerHorizontal="true"
                     />

                <TextView
                    android:id="@+id/txt_04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_04"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dip"
                    android:text="我的"
                    android:textSize="12sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/txt_tips04"
                android:layout_width="12dip"
                android:layout_height="12dip"
                android:layout_marginTop="4dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="22dip"
                android:text="1"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="12sp"
                android:visibility="gone"
                android:background="@drawable/shape_full_red_55"/>
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.7dip"
        android:background="#d0d0d0" />

</RelativeLayout>