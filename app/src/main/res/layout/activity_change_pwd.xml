<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/mainLayout"
    android:orientation="vertical">

    <include
        layout="@layout/layout_top"/>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#f2f2f2">




            <EditText
                android:id="@+id/edt_old_pwd"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_toLeftOf="@+id/btn_code"
                android:layout_marginLeft="18dip"
                android:layout_marginRight="18dip"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:layout_marginTop="14dip"
                android:lines="1"
                android:paddingLeft="18dip"
                android:inputType="textPassword"
                android:background="@drawable/shape_full_white_5"
                android:hint="输入旧密码（无旧密码可为空）"/>



            <EditText
                android:id="@+id/edt_new_pwd01"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_toLeftOf="@+id/btn_code"
                android:layout_marginLeft="18dip"
                android:layout_marginRight="18dip"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:layout_marginTop="14dip"
                android:lines="1"
                android:paddingLeft="18dip"
                android:inputType="textPassword"
                android:background="@drawable/shape_full_white_5"
                android:hint="输入新密码"/>


            <EditText
                android:id="@+id/edt_new_pwd02"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_toLeftOf="@+id/btn_code"
                android:layout_marginLeft="18dip"
                android:layout_marginRight="18dip"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:layout_marginTop="14dip"
                android:inputType="textPassword"
                android:lines="1"
                android:paddingLeft="18dip"
                android:background="@drawable/shape_full_white_5"
                android:hint="再次输入新密码"/>




            <Button
                android:id="@+id/btn_sure"
                android:layout_width="300dip"
                android:layout_height="40dip"
                android:layout_marginTop="20dip"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/selector_shape_gray_5"
                android:textColor="@color/white"
                android:enabled="false"
                android:text="确认修改"/>


        </LinearLayout>














</LinearLayout>