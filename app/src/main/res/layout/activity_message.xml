<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/layout_top"/>




    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="20dip"
        android:layout_marginBottom="20dip"
        >
        <RelativeLayout
            android:id="@+id/layout_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/selector_list_item01"
            android:paddingTop="13dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingBottom="13dip">
            <ImageView
                android:id="@+id/img_icon"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_notice"/>
            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_icon"
                android:layout_marginLeft="6dip"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:text="系统公告"
                android:textColor="@color/black"/>




            <ImageView
                android:id="@+id/img_arrow"
                android:layout_width="16dip"
                android:layout_height="16dip"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/arrow_right_gray"/>

            <TextView
                android:id="@+id/txt_msg_count"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/img_arrow"
                android:layout_marginRight="5dip"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:visibility="gone"
                android:background="@drawable/shape_full_red_55"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dip"
        android:paddingRight="10dip">

        <include
            layout="@layout/layout_spring_view"
            />
    </LinearLayout>

</LinearLayout>