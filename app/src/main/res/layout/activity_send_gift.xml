<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/title_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="77dip"
        android:background="@drawable/shape_gradient_full_blue_0"
        android:paddingTop="27dip">

        <LinearLayout
            android:id="@+id/layout_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/selector_shape_nav"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="12dip">

            <ImageView
                android:id="@+id/img_left"
                android:layout_width="8dip"
                android:layout_height="16dip"
                android:layout_marginLeft="12dip"
                android:background="@drawable/icon_top_back"
                android:clickable="true" />

            <TextView
                android:id="@+id/txt_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dip"
                android:text="返回"
                android:textColor="#666666"
                android:textSize="14sp" />

        </LinearLayout>


        <ImageView
            android:id="@+id/img_right"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_shape_nav"
            android:clickable="true"
            android:padding="15dip"
            android:visibility="gone"></ImageView>

        <TextView
            android:id="@+id/txt_right"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_shape_nav"
            android:gravity="center"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:textColor="@color/gray_33"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="80dip"
        android:layout_marginRight="80dip"
        android:gravity="center"
        android:text="赠送礼物"
        android:textColor="@color/white"
        android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/nestedScrollViewStyle">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="75dip"
                    android:background="@drawable/shape_gradient_full_blue_0" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="-70dip"
                    android:descendantFocusability="blocksDescendants"
                    android:orientation="vertical"
                    android:scrollbars="vertical">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="22.5dip"
                            android:background="@drawable/shape_full_white_5"
                            android:orientation="vertical"
                            android:paddingBottom="10dip"
                            android:paddingTop="30dip">


                            <TextView
                                android:id="@+id/txt_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/gray_33"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="8dip"
                                android:text="当前算力"
                                android:textColor="@color/gray_66"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/txt_speed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="8dip"
                                android:text="--"
                                android:textColor="@color/gray_33"
                                android:textSize="18sp"
                                android:textStyle="bold" />


                        </LinearLayout>


                        <com.ailink.view.RoundImageView
                            android:id="@+id/img_head"
                            android:layout_width="45dip"
                            android:layout_height="45dip"
                            android:layout_centerHorizontal="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/staker" />
                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:background="@drawable/shape_full_white_5"
                        android:orientation="vertical"
                        android:paddingBottom="8dip"
                        android:paddingTop="8dip">

                        <TextView
                            android:id="@+id/txt_intro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="10dip"
                            android:layout_marginRight="10dip"
                            android:layout_marginTop="8dip"
                            android:textColor="@color/gray_33"
                            android:textSize="13sp" />


                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:background="@drawable/shape_top_left_right_full_white_5"
                        android:gravity="center"
                        android:paddingBottom="10dip"
                        android:paddingTop="10dip"
                        android:text="礼物选购"
                        android:textColor="@color/gray_33"
                        android:textSize="15sp" />

                    <View style="@style/horizontal_line_style" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_gift"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:paddingBottom="66dip" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>


        <RelativeLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:layout_alignParentBottom="true"
            android:background="@color/white">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的资产"
                    android:textColor="@color/gray_33"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txt_asset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:text="蓝钻:--"
                    android:textColor="@color/gray_33"
                    android:textSize="13sp" />

            </LinearLayout>


            <TextView
                android:id="@+id/txt_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dip"
                android:layout_toLeftOf="@+id/txt_send"
                android:text="礼物总价 0"
                android:textColor="@color/gray_33"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/txt_send"
                android:layout_width="72dip"
                android:layout_height="36dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:background="@drawable/selector_color_gradient_yellow02_55"
                android:clickable="true"
                android:gravity="center"
                android:text="赠送"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <View style="@style/horizontal_line_style" />
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>