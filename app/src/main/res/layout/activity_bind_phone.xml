<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/mainLayout"
    android:orientation="vertical">

    <include
        layout="@layout/layout_top"/>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f2f2f2">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginLeft="18dip"
            android:layout_marginRight="18dip"
            android:layout_marginTop="14dip"
            android:background="@drawable/shape_full_white_5">


            <TextView
                android:id="@+id/txt_phone_quhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+86"
                android:textSize="16sp"
                android:textColor="@color/gray_33"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"/>


            <ImageView
                android:id="@+id/img_arrow_down"
                android:layout_width="13dip"
                android:layout_height="8dip"
                android:background="@drawable/arrow_up"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/txt_phone_quhao"
                android:layout_marginLeft="10dip"/>


            <View
                android:id="@+id/view_line01"
                style="@style/vertical_line_style"
                android:layout_toRightOf="@+id/img_arrow_down"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                />


            <EditText
                android:id="@+id/edt_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/view_line01"
                android:layout_marginLeft="10dip"
                android:gravity="center_vertical"
                android:digits="0123456789"
                android:inputType="numberDecimal"
                android:background="#00000000"
                android:textSize="16sp"
                android:lines="1"
                android:hint="输入手机号"/>


        </RelativeLayout>








        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dip"
            >





            <EditText
                android:id="@+id/edt_code"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_toLeftOf="@+id/btn_code"
                android:layout_marginLeft="18dip"
                android:layout_marginRight="18dip"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:lines="1"
                android:paddingLeft="18dip"
                android:background="@drawable/shape_full_white_5"
                android:hint="验证码"/>


            <Button
                android:id="@+id/btn_code"
                android:layout_width="wrap_content"
                android:layout_height="50dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="18dip"
                android:paddingLeft="4dip"
                android:paddingRight="4dip"
                android:text="获取验证码"
                android:background="@drawable/shape_full_white_5"
                />

        </RelativeLayout>



        <Button
            android:id="@+id/btn_bind_phone"
            android:layout_width="300dip"
            android:layout_height="40dip"
            android:layout_marginTop="20dip"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/selector_shape_gray_5"
            android:textColor="@color/white"
            android:enabled="false"
            android:text="绑定"/>


    </LinearLayout>














</LinearLayout>