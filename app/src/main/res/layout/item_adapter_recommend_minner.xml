<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="226.7px"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="10px">
    <android.support.v7.widget.CardView
        android:layout_width="220px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3.3px"
        android:layout_marginRight="3.3px"
        android:layout_marginTop="4dip"
        android:layout_marginBottom="4dip"
        >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:paddingTop="15dip"
                android:paddingBottom="15dip"
                android:gravity="center_horizontal">


                <com.ailink.view.RoundImageView
                    android:id="@+id/img_head"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:scaleType="fitXY"
                    android:layout_marginTop="10dip"
                    />

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小李子"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textColor="#000000"
                    android:layout_marginTop="6dip"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/txt_shenjia"
                    android:layout_width="226px"
                    android:layout_height="20dip"
                    android:text="身价:0"
                    android:gravity="center"
                    android:lines="1"
                    android:textColor="#ff0000"
                    android:layout_marginTop="6dip"
                    android:textSize="14sp"/>


                <Button
                    android:id="@+id/btn_buy"
                    android:layout_width="70dip"
                    android:layout_height="31.8dip"
                    android:background="@drawable/selector_btn_buy_bg"
                    android:layout_marginTop="6dip"
                    android:text="购买"
                    android:textSize="15sp"
                    android:textColor="@color/white"/>


            </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
