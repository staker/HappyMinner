<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="77dip"
        android:background="@drawable/shape_gradient_full_blue_0"
        android:paddingTop="27dip">

        <LinearLayout
            android:id="@+id/layout_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/selector_shape_nav"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="12dip">

            <ImageView
                android:id="@+id/img_left"
                android:layout_width="8dip"
                android:layout_height="16dip"
                android:layout_marginLeft="12dip"
                android:background="@drawable/icon_top_back"
                android:clickable="true" />

            <TextView
                android:id="@+id/txt_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dip"
                android:text="返回"
                android:textColor="#666666"
                android:textSize="14sp" />

        </LinearLayout>


        <ImageView
            android:id="@+id/img_right"
            android:layout_width="60dip"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_shape_nav"
            android:src="@drawable/icon_contract"
            android:padding="10dip"
            android:paddingRight="10dip"
            android:clickable="true"></ImageView>

        <TextView
            android:id="@+id/txt_right"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_shape_nav"
            android:gravity="center"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:textColor="@color/gray_33"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="80dip"
            android:layout_marginRight="80dip"
            android:gravity="center"
            android:text="合约"
            android:textColor="@color/white"
            android:textSize="17sp" />

    </RelativeLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dip"
                    android:orientation="horizontal"
                    android:background="@drawable/shape_gradient_full_blue_0"
                    android:gravity="center_vertical"
                    android:paddingBottom="18dip"
                    >

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_new_contract"
                        android:layout_marginTop="4dip"
                        android:layout_marginBottom="4dip"
                        android:layout_width="317px"
                        android:layout_height="84px"
                        android:layout_marginLeft="29px"
                        app:cardCornerRadius="5dip"
                        app:layout_auto_basewidth="height|marginLeft"
                        >

                        <TextView
                            android:id="@+id/txt_daily_mission"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="发起合约"
                            android:textColor="#5080FD"
                            android:textSize="17sp"
                            android:layout_gravity="center"/>
                    </android.support.v7.widget.CardView>



                    <android.support.v7.widget.CardView
                        android:id="@+id/card_my_contract"
                        android:layout_marginTop="4dip"
                        android:layout_marginBottom="4dip"
                        android:layout_width="317px"
                        android:layout_height="84px"
                        android:layout_marginLeft="29px"
                        app:layout_auto_basewidth="height|marginLeft"
                        app:cardCornerRadius="5dip"
                        >
                        <TextView
                            android:id="@+id/txt_base_mission"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的合约"
                            android:textColor="#5080FD"
                            android:textSize="17sp"
                            android:layout_gravity="center"/>
                    </android.support.v7.widget.CardView>



                </LinearLayout>





                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_full_white_10"
                        android:orientation="vertical"
                        android:layout_marginTop="-10dip">




                        <LinearLayout
                            android:id="@+id/layout_order"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:layout_marginTop="15dip">

                            <TextView
                                android:id="@+id/txt_order"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="蓝钻高到低"
                                android:textColor="@color/gray_33"
                                android:textSize="14sp"
                                android:layout_gravity="center"/>

                            <ImageView
                                android:id="@+id/img_order"
                                android:layout_width="13dip"
                                android:layout_height="8.5dip"
                                android:background="@drawable/icon_arrow_down"
                                android:layout_marginLeft="3dip"
                                ></ImageView>

                        </LinearLayout>


                        <include
                            layout="@layout/layout_spring_view"
                            />



                    </LinearLayout>




            </LinearLayout>



</LinearLayout>