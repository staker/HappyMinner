<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/appColorMain">




    <include
        layout="@layout/layout_top"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/txt_tab01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               android:layout_weight="1"
android:gravity="center"
                android:text="我的矿工"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_tab02"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_toRightOf="@+id/txt_tab01"
                android:text="推荐矿工"
                android:textColor="#999999"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/txt_tab03"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_toRightOf="@+id/txt_tab02"
                android:text="人脉圈"
                android:textColor="#999999"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>


    <FrameLayout
        android:id="@+id/frame_miner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#999999"
        >
    </FrameLayout>



</LinearLayout>