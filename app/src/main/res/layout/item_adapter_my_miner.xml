<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/selector_list_item01">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="16dip"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="10dip"
      >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingBottom="15dip">/

            <com.ailink.view.RoundImageView
                android:id="@+id/img_head"
                android:layout_width="66dip"
                android:layout_height="66dip"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dip"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_miner_state"
                        android:layout_width="46dip"
                        android:layout_height="18dip"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:text="挖矿中"
                        android:gravity="center"
                        android:background="@drawable/selector_color_gradient_yellow01_0"/>

                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:lines="1"
                        android:ellipsize="end"
                        android:layout_marginRight="6dip"
                        android:layout_marginLeft="4dip"
                        android:layout_toRightOf="@id/img_head"
                        android:textColor="@color/gray_33"
                        android:textSize="15sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dip">

                    <ImageView
                        android:layout_width="13dip"
                        android:layout_height="13dip"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/icon_shenjia" />
                    <TextView
                        android:id="@+id/txt_shenjia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ellipsize="end"
                        android:layout_marginLeft="3dip"
                        android:lines="1"
                        android:text="身价 0"
                        android:textColor="@color/gray_33"
                        android:textSize="13sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dip">

                    <ImageView
                        android:layout_width="13dip"
                        android:layout_height="13dip"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/icon_suanli" />

                    <TextView
                        android:id="@+id/txt_suanli"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="3dip"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="算力 0"
                        android:textColor="@color/gray_33"
                        android:textSize="13sp" />


                </LinearLayout>



            </LinearLayout>





            <TextView
                android:id="@+id/txt_fire_miner"
                android:layout_width="80dip"
                android:layout_height="28dip"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dip"
                android:gravity="center"
                android:text="赠送礼物"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:background="@drawable/selector_color_gradient_red_55"/>

        </RelativeLayout>


            <View
                style="@style/horizontal_line_style"/>



            <TextView
                android:id="@+id/txt_cur_pool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:paddingBottom="5dip"
                android:paddingLeft="10dip"
                android:text="当前位置："
                android:textSize="14sp"
                android:textColor="#585858"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>