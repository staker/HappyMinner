<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/mainLayout"
    android:background="#00000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >

        <ImageView
            android:id="@+id/img_top"
            android:layout_width="600px"
            android:layout_height="308px"
            app:layout_auto_basewidth="height"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/lbank_top"
            android:clickable="true"/>
        <ImageView
            android:id="@+id/img_bottom"
            android:layout_width="600px"
            android:layout_height="413px"
            app:layout_auto_basewidth="height"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/poster_bottom"
            android:clickable="true"/>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/layout_center"
        android:layout_width="600px"
        android:layout_height="300px"
        android:layout_centerInParent="true"
        app:layout_auto_basewidth="height"
        android:paddingTop="100px"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="点击注册"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/txt_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:textSize="16sp"
            android:text="领取 400ALI + 1918 蓝钻"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            />

    </LinearLayout>



    <Button
        android:id="@+id/btn_view"
        android:layout_width="420px"
        android:layout_height="84px"
        android:layout_below="@+id/layout_center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/selector_shape_gradient_blue_5"
        android:textColor="@color/white"
        app:layout_auto_basewidth="height"
        android:textSize="13sp"
        android:text="领取奖励"/>

    <TextView
        android:id="@+id/txt_tips"
        android:layout_width="600px"
        android:layout_height="126px"
        app:layout_auto_basewidth="height"
        android:layout_below="@+id/btn_view"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="13sp"
        android:textColor="#FF1D38"
        android:text="注:需要通过官方链接注册,才可获取空投奖励"
        />

</RelativeLayout>