<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:orientation="vertical">

    <include
        layout="@layout/layout_top"/>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="16dip"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="10dip"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dip"
            android:paddingTop="20dip"
            android:layout_marginLeft="10dip"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="18dip"
                android:layout_height="13dip"
                android:background="@drawable/icon_shenjia" />

            <TextView
                android:id="@+id/txt_can_use"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_marginLeft="4dip"
                android:lines="1"
                android:textColor="#5080FD"
                android:textSize="17sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_marginLeft="20dip"
        android:paddingTop="5dip"
        android:paddingBottom="5dip"
        android:lines="1"
        android:text="提示：互送蓝钻，可以使双方增加算力 50蓝钻=1算力"
        android:textColor="@color/gray_66"
        android:textSize="13sp" />


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="16dip"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="10dip"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dip"
            android:paddingTop="20dip"
            android:paddingLeft="14dip"
            android:paddingRight="14dip"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="互送数量"
                android:textColor="@color/gray_33"
                android:textSize="20sp" />






            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dip"
                android:paddingTop="16dip">
                <TextView
                    android:id="@+id/txt_lan_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="17sp"
                    android:text="1000"
                    android:textColor="@color/gray_33"
                    />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textSize="17sp"
                    android:textColor="@color/gray_66"
                    android:text="蓝钻"
                    />

            </RelativeLayout>

            <View
                style="@style/horizontal_line_style"/>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dip">
                <TextView
                    android:id="@+id/txt_speed_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="15sp"
                    android:text="20"
                    android:textColor="@color/gray_66"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textSize="15sp"
                    android:textColor="@color/gray_66"
                    android:text="算力"
                    />

            </RelativeLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dip">

                <TextView
                    android:id="@+id/txt_add01"
                    android:layout_width="169px"
                    android:layout_height="71px"
                    app:layout_auto_basewidth="height"

                    android:text="+1000"
                    android:textSize="14sp"
                    android:textColor="@drawable/selector_text_color_blue_white"
                    android:gravity="center"
                    android:background="@drawable/selector_shape_blue_5"
                    />

                <View
                    android:layout_width="0.1dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/txt_add02"
                    android:layout_width="169px"
                    android:layout_height="71px"
                    app:layout_auto_basewidth="height"
                    android:text="+5000"
                    android:textSize="14sp"
                    android:textColor="@drawable/selector_text_color_blue_white"
                    android:gravity="center"
                    android:background="@drawable/selector_shape_blue_5"
                    />

                <View
                    android:layout_width="0.1dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/txt_add03"
                    android:layout_width="169px"
                    android:layout_height="71px"
                    app:layout_auto_basewidth="height"
                    android:text="+10000"
                    android:textSize="14sp"
                    android:textColor="@drawable/selector_text_color_blue_white"
                    android:gravity="center"
                    android:background="@drawable/selector_shape_blue_5"
                    />
            </LinearLayout>







        </LinearLayout>
    </android.support.v7.widget.CardView>



    <TextView
        android:id="@+id/txt_sure"
        android:layout_width="match_parent"
        android:layout_height="56dip"
        android:layout_marginTop="22dip"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="16dip"
        android:text="发起合约"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/selector_color_gradient_blue01_5"
        />
</LinearLayout>