<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/mainLayout"
    android:background="#00000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/img_top"
            android:layout_width="600px"
            android:layout_height="308px"
            android:layout_gravity="center_horizontal"
            app:layout_auto_basewidth="height"
            android:background="@drawable/poster_top"/>
        <ImageView
            android:id="@+id/img_bottom"
            android:layout_width="600px"
            android:layout_height="513px"
            app:layout_auto_basewidth="height"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/poster_bottom"/>

    </LinearLayout>



    <ImageView
        android:id="@+id/img_live_pic"
        android:layout_width="260px"
        android:layout_height="260px"
        app:layout_auto_basewidth="height"
        android:layout_centerInParent="true"/>


    <Button
        android:id="@+id/btn_view"
        android:layout_width="340px"
        android:layout_height="44dip"
        android:layout_marginTop="20dip"
        android:layout_below="@+id/img_live_pic"
        android:layout_centerHorizontal="true"
        android:background="@drawable/selector_shape_gradient_blue_5"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:text="观看直播"/>

    <TextView
        android:id="@+id/txt_live_tips"
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dip"
        android:gravity="center"
        android:textSize="13sp"
        android:textColor="#FF1D38"
        />

</RelativeLayout>