<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30px"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="分享到"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="260px"
            android:paddingLeft="80px"
            android:paddingRight="80px"
            android:paddingTop="60px"
            android:paddingBottom="60px"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/shareWechat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/socialize_wechat"/>
            <ImageView
                android:id="@+id/shareWxcircle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/socialize_wxcircle"/>
            <!--<ImageView-->
                <!--android:id="@+id/shareQQ"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="1"-->
                <!--android:src="@mipmap/socialize_qq"/>-->
        </LinearLayout>
        <View style="@style/horizontal_line_style"/>
        <TextView
            android:id="@+id/cancleBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30px"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#FD6C38"
            android:text="取消分享"/>
    </LinearLayout>
</LinearLayout>