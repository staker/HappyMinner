<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 点击状态下的效果   带有渐变色-->
    <item android:state_pressed="true"><shape>

        <corners android:radius="5dip" />
        <gradient
            android:startColor="#882582FF"
            android:centerColor="#882582FF"
            android:endColor="#886CAAFF"
            android:useLevel="true"
            android:angle="180"
            android:type="linear"
            android:centerX="0"
            android:centerY="0"
            android:gradientRadius="90"/>
        </shape></item>
    <!-- 正常状态下(非点击)的效果 -->
    <item android:state_pressed="false"><shape>
        <corners android:radius="5dip" />
        <gradient
            android:startColor="#2582FF"
            android:centerColor="#2582FF"
            android:endColor="#6CAAFF"
            android:useLevel="true"
            android:angle="180"
            android:type="linear"
            android:centerX="0"
            android:centerY="0"
            android:gradientRadius="90"/>
        </shape></item>
    <!-- http://blog.csdn.net/drift_away/article/details/8178459 -->

</selector>